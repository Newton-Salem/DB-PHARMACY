@using Microsoft.AspNetCore.Http
@{
    var role = Context.Session.GetString("Role");
    var currentPath = Context.Request.Path.Value;
    int notifCount = ViewData["NotifCount"] as int? ?? 0;
}


@* @{
    var role = Context.Session.GetString("Role");
    var currentPath = Context.Request.Path.Value;
} *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PHARMACY</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PHARMACY.styles.css" asp-append-version="true" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <!-- Sidebar Styles -->
    <style>
        body {
            background: #f4f7fb;
        }

        .sidebar {
            width: 220px;
            min-height: 100vh;
            background: linear-gradient(180deg, #f8fbff, #eef3fb);
            box-shadow: 4px 0 18px rgba(0,0,0,0.08);
        }

            .sidebar h5 {
                font-weight: 700;
                color: #1e40af;
                margin-bottom: 20px;
            }

            .sidebar .nav-link {
                display: flex;
                align-items: center;
                gap: 10px;
                color: #334155;
                padding: 12px 15px;
                border-radius: 12px;
                margin-bottom: 6px;
                transition: all 0.25s ease;
                font-weight: 500;
            }

                .sidebar .nav-link i {
                    font-size: 18px;
                }

                .sidebar .nav-link:hover {
                    background: #e0ecff;
                    color: #1d4ed8;
                    transform: translateX(6px);
                }

                .sidebar .nav-link.active {
                    background: linear-gradient(135deg, #2563eb, #3b82f6);
                    color: white;
                    box-shadow: 0 8px 20px rgba(37,99,235,0.35);
                }

                    .sidebar .nav-link.active i {
                        color: white;
                    }

        .logout-btn {
            color: #b91c1c;
        }

            .logout-btn:hover {
                background: #fee2e2;
                color: #991b1b;
            }


        /* ===== Notification UI ===== */
        .notif-panel {
            position: absolute;
            top: 55px;
            right: 0;
            width: 320px;
            background: white;
            border-radius: 14px;
            box-shadow: 0 15px 40px rgba(0,0,0,0.2);
            padding: 15px;
            display: none;
            animation: slideDown 0.35s ease forwards;
            z-index: 9999;
        }

        @@keyframes slideDown {

            from{
                opacity: 0;
                transform: translateY(-20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }

        }

        .notif-item {
            padding: 10px;
            border-radius: 10px;
            margin-bottom: 8px;
            background: #f8fafc;
            transition: 0.25s;
        }

            .notif-item.unread {
                background: #e0ecff;
                font-weight: 500;
            }

            .notif-item:hover {
                background: #dbeafe;
            }


        .notif-badge {
            position: absolute;
            top: 4px;
            right: 4px;
            min-width: 18px;
            height: 18px;
            padding: 0 5px;
            border-radius: 50%;
            background: #ef4444;
            color: white;
            font-size: 11px;
            font-weight: bold;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .notif-dot {
            position: absolute;
            top: 6px;
            right: 6px;
            width: 10px;
            height: 10px;
            background: #ef4444;
            border-radius: 50%;
        }





    </style>
</head>






<body>

    <!-- Top Navbar -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom shadow-sm">
            <div class="container-fluid d-flex justify-content-between align-items-center">

                <a class="navbar-brand fw-bold text-primary" asp-page="/Index">
                    💊 PHARMACY
                </a>

                <!-- 🔔 Notification Bell -->
                <div class="position-relative">
                    @if (role == "Pharmacist")
                    {
                        <a href="/Pharmacist/Notification/Index" class="btn btn-light position-relative">
                            <i class="bi bi-bell fs-4"></i>

                            @if (notifCount > 0)
                            {
                                <span class="notif-badge">@notifCount</span>
                            }
                            else
                            {
                                <span class="notif-dot"></span>
                            }
                        </a>
                    }
                    else if (role == "Customer")
                    {
                        <a href="/Customer/Notification/Index" class="btn btn-light position-relative">
                            <i class="bi bi-bell fs-4"></i>

                            @if (notifCount > 0)
                            {
                                <span class="notif-badge">@notifCount</span>
                            }
                            else
                            {
                                <span class="notif-dot"></span>
                            }
                        </a>
                    }
                </div>




                    <!-- Notification Panel -->
                    <div id="notifPanel" class="notif-panel">
                        <h6 class="fw-bold mb-2">Notifications</h6>
                        <div id="notifList">
                            <p class="text-muted text-center">No notifications</p>
                        </div>
                    </div>
                </div>

            </div>
        </nav>

    </header>

    <div class="d-flex">

        <!-- Sidebar -->
        <nav class="sidebar p-3">
            <h5>📋 Menu</h5>

            @if (role == "Admin")
            {
                <ul class="nav flex-column">

                    <li>
                        <a class="nav-link @(currentPath.Contains("/Admin/Index") ? "active" : "")"
                           href="/Admin/Index">
                            <i class="bi bi-speedometer2"></i> Dashboard
                        </a>
                    </li>

                    <li>
                        <a class="nav-link @(currentPath.Contains("/Admin/Users") ? "active" : "")"
                           href="/Admin/Users/Index">
                            <i class="bi bi-people"></i> Users
                        </a>
                    </li>

                    <li>
                        <a class="nav-link @(currentPath.Contains("/Admin/Medicines") ? "active" : "")"
                           href="/Admin/Medicines">
                            <i class="bi bi-capsule"></i> Medicines
                        </a>
                    </li>

                    <li>
                        <a class="nav-link @(currentPath.Contains("/Admin/Orders") ? "active" : "")"
                           href="/Admin/Orders/Index">
                            <i class="bi bi-bag-check"></i> Orders
                        </a>
                    </li>

                    <li>
                        <a class="nav-link @(currentPath.Contains("/Admin/Suppliers") ? "active" : "")"
                           href="/Admin/Suppliers">
                            <i class="bi bi-truck"></i> Suppliers
                        </a>
                    </li>

                    <li>
                        <a class="nav-link @(currentPath.Contains("/Admin/Reports") ? "active" : "")"
                           href="/Admin/Reports/Index">
                            <i class="bi bi-bar-chart"></i> Reports
                        </a>
                    </li>


                    <li>
                        <a class="nav-link @(currentPath.Contains("/Account/Profile") ? "active" : "")"
                           href="/Account/Profile">
                            <i class="bi bi-person-circle"></i> Profile
                        </a>
                    </li>

                    <li class="mt-3">
                        <form method="post" asp-page="/Account/Logout">
                            <button type="submit"
                                    class="nav-link logout-btn btn btn-link text-start w-100">
                                <i class="bi bi-box-arrow-right"></i> Logout
                            </button>
                        </form>
                    </li>

                </ul>
            }

            else if (role == "Customer")
            {
                <ul class="nav flex-column">
                    <li>
                        <a class="nav-link @(currentPath.Contains("/Customer/Index") ? "active" : "")"
                           href="/Customer/Index">
                            <i class="bi bi-speedometer2"></i> Dashboard
                        </a>
                    </li>

                    <li>
                        <a class="nav-link @(currentPath.Contains("/Customer/Medicines") ? "active" : "")"
                           href="/Customer/Medicines/Index">
                            <i class="bi bi-capsule"></i> Medicines
                        </a>
                    </li>

                    <li>
                        <a class="nav-link @(currentPath.Contains("/Customer/Orders") ? "active" : "")"
                           href="/Customer/Orders/Index">
                            <i class="bi bi-receipt"></i> My Orders
                        </a>
                    </li>

                    <li>
                        <a class="nav-link @(currentPath.Contains("/Account/Profile") ? "active" : "")"
                           href="/Account/Profile">
                            <i class="bi bi-person-circle"></i> Profile
                        </a>
                    </li>

                    <li class="mt-3">
                        <form method="post" asp-page="/Account/Logout">
                            <button type="submit"
                                    class="nav-link logout-btn btn btn-link text-start w-100">
                                <i class="bi bi-box-arrow-right"></i> Logout
                            </button>
                        </form>
                    </li>
                </ul>
            }

            else if (role == "Supplier")
            {
                <ul class="nav flex-column">
                    <li>
                        <a class="nav-link @(currentPath.Contains("/Supplier/Index") ? "active" : "")"
                           href="/Supplier/Index">
                            <i class="bi bi-speedometer2"></i> Dashboard
                        </a>
                    </li>

                    <li>
                        <a class="nav-link @(currentPath.Contains("/Supplier/Order") ? "active" : "")"
                           href="/Supplier/Orders/Index">
                            <i class="bi bi-truck"></i> Orders
                        </a>
                    </li>

                    <li>
                        <a class="nav-link @(currentPath.Contains("/Account/Profile") ? "active" : "")"
                           href="/Account/Profile">
                            <i class="bi bi-person-circle"></i> Profile
                        </a>
                    </li>

                    <li class="mt-3">
                        <form method="post" asp-page="/Account/Logout">
                            <button type="submit"
                                    class="nav-link logout-btn btn btn-link text-start w-100">
                                <i class="bi bi-box-arrow-right"></i> Logout
                            </button>
                        </form>
                    </li>
                </ul>
            }

            else if (role == "Pharmacist")
            {
                <ul class="nav flex-column">
                    <li>
                        <a class="nav-link @(currentPath.Contains("/Pharmacist/Index") ? "active" : "")"
                           href="/Pharmacist/Index">
                            <i class="bi bi-speedometer2"></i> Dashboard
                        </a>
                    </li>

                    <li>
                        <a class="nav-link @(currentPath.Contains("/Pharmacist/Medicines") ? "active" : "")"
                           href="/Pharmacist/Medicines/Index">
                            <i class="bi bi-capsule"></i> Medicines
                        </a>
                    </li>

                    <li>
                        <a class="nav-link @(currentPath.Contains("/Pharmacist/SupplierRequest") ? "active" : "")"
                           href="/Pharmacist/SupplierRequest/Index">
                            <i class="bi bi-truck"></i> Supplier Request
                        </a>
                    </li>

                    <li>
                        <a class="nav-link @(currentPath.Contains("/Pharmacist/CustomerFeedback") ? "active" : "")"
                           href="/Pharmacist/CustomerFeedback/Index">
                            <i class="bi bi-chat-left-text"></i> Feedbacks
                        </a>
                    </li>

                    <li>
                        <a class="nav-link @(currentPath.Contains("/Account/Profile") ? "active" : "")"
                           href="/Account/Profile">
                            <i class="bi bi-person-circle"></i> Profile
                        </a>
                    </li>

                    <li class="mt-3">
                        <form method="post" asp-page="/Account/Logout">
                            <button type="submit"
                                    class="nav-link logout-btn btn btn-link text-start w-100">
                                <i class="bi bi-box-arrow-right"></i> Logout
                            </button>
                        </form>
                    </li>
                </ul>
            }
        </nav>

        <!-- Main Content -->
        <main class="flex-fill p-4">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-center py-2">
        &copy; 2025 - PHARMACY
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
