@page
@model PHARMACY.Pages.Supplier.Orders.CustomerOrdersModel
@{
    ViewData["Title"] = "Customer Orders";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success text-center">
        @TempData["Success"]
    </div>
}

<style>
    .order-card {
        border-radius: 24px;
        padding: 18px;
        color: #fff;
        position: relative;
        overflow: hidden;
        animation: fadeSlide 0.7s ease;
        transition: all 0.35s ease;
    }

        .order-card:hover {
            transform: translateY(-8px) scale(1.02);
            box-shadow: 0 18px 45px rgba(0,0,0,0.35);
        }

    /* Animations */
    @@keyframes fadeSlide {
        from

    {
        opacity: 0;
        transform: translateY(30px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    /* Card colors */
    .card-pending {
        background: linear-gradient(135deg, #f6c343, #f39c12);
    }

    .card-completed {
        background: linear-gradient(135deg, #2ecc71, #27ae60);
    }

    .card-cancelled {
        background: linear-gradient(135deg, #e74c3c, #c0392b);
    }

    /* Header */
    .order-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 15px;
        margin-bottom: 10px;
    }

    /* Body */
    .order-body p {
        margin-bottom: 6px;
        font-size: 14px;
    }

    /* Status badge */
    .status-badge {
        padding: 6px 14px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 700;
    }

    .badge-pending {
        background: rgba(255,255,255,0.25);
    }

    .badge-approved {
        background: rgba(0,0,0,0.25);
    }

    .badge-cancelled {
        background: rgba(0,0,0,0.35);
    }

    /* Buttons */
    .action-btn {
        border-radius: 14px;
        font-weight: 600;
        transition: all 0.25s ease;
    }

        .action-btn:hover {
            transform: scale(1.05);
        }

</style>

<div class="container mt-4">
    <h2 class="text-center fw-bold mb-4">🧾 Customer Orders</h2>

    <div class="row g-4">
        @foreach (var r in Model.Requests)
        {
            <div class="col-md-6 col-lg-4">
                <div class="order-card @(
                     r.Status == "Pending" ? "card-pending" :
                     r.Status == "Approved" ? "card-completed" :
                     "card-cancelled"
        )">

                <div class="order-header">
                    <strong>Request #@r.RequestId</strong>

                        <span class="status-badge @(
                                          r.Status == "Pending" ? "badge-pending" :
                                          r.Status == "Approved" ? "badge-approved" :
                                          "badge-cancelled"
                        )">
                        @r.Status
                    </span>
                </div>

                    <div class="order-body">
                        <p>🧑‍⚕️ <strong>Pharmacist:</strong> @r.PharmacistName</p>
                        <p>💊 <strong>Medicine:</strong> @r.MedicineName</p>
                        <p>📦 <strong>Quantity:</strong> @r.Quantity</p>
                        <p>📅 <strong>Date:</strong> @r.RequestDate.ToShortDateString()</p>

                    @if (r.Status == "Pending")
                        {
                            <div class="d-flex gap-2 mt-3">
                                <form method="post" asp-page-handler="Approve" class="w-50">
                                    <input type="hidden" name="requestId" value="@r.RequestId" />
                                    <button class="btn btn-light w-100 action-btn">
                                        ✔ Approve
                                    </button>
                                </form>

                                <form method="post" asp-page-handler="Cancel" class="w-50"
                                      onsubmit="return confirm('Reject this request?');">
                                    <input type="hidden" name="requestId" value="@r.RequestId" />
                                    <button class="btn btn-dark w-100 action-btn">
                                        ✖ Reject
                                    </button>
                                </form>
                            </div>
                        }
                        else
                        {
                            <button class="btn btn-light w-100 mt-3" disabled>
                                No Actions
                            </button>
                        }
                    </div>

                </div>
            </div>

        }

    </div>
</div>

