@page
@model PHARMACY.Pages.Supplier.Notifications.IndexModel

<h3 class="mb-4">🔔 Notifications</h3>

@if (!Model.Notifications.Any())
{
    <div class="alert alert-info text-center">
        No notifications yet
    </div>
}
else
{
    <div class="list-group">
        @foreach (var n in Model.Notifications)
        {
            <div class="list-group-item d-flex justify-content-between align-items-center
                                @(n.Status == "Unread" ? "list-group-item-warning" : "")">

                <div>
                    <strong>@n.Type</strong><br />
                    @n.Message<br />
                    <small class="text-muted">@n.Date.ToShortDateString()</small>
                </div>

                @if (n.Status == "Unread")
                {
                    <form method="post" asp-page-handler="Read">
                        <input type="hidden" name="id" value="@n.NotificationID" />
                        <button class="btn btn-sm btn-success">
                            Mark as read
                        </button>
                    </form>
                }
            </div>
        }
    </div>
}
