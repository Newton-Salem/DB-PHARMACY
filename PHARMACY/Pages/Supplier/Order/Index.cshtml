@page
@model PHARMACY.Pages.Supplier.Orders.IndexModel
@{
    ViewData["Title"] = "Supplier Orders";
}

<div class="container mt-4">
    <h1 class="mb-4 text-center">Orders Received</h1>

    <table class="table table-striped table-bordered text-center align-middle">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Medicine</th>
                <th>Quantity</th>
                <th>Total</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var o in Model.Orders)
            {
                <tr>
                    <td>@o.OrderID</td>
                    <td>@o.MedicineName</td>
                    <td>@o.Quantity</td>
                    <td>@o.Total.ToString("C")</td>
                    <td>
                        @if (o.Status == "Pending")
                        {
                            <span class="badge bg-warning text-dark">Pending</span>
                        }
                        else if (o.Status == "Completed")
                        {
                            <span class="badge bg-success">Completed</span>
                        }
                        else if (o.Status == "Cancelled")
                        {
                            <span class="badge bg-danger">Cancelled</span>
                        }
                    </td>
                    <td>
                        @if (o.Status == "Pending")
                        {
                            <form method="post" asp-page-handler="Complete">
                                <input type="hidden" name="orderId" value="@o.OrderID" />
                                <button type="submit" class="btn btn-success btn-sm">Mark Completed</button>
                            </form>
                        }
                        else
                        {
                            <button class="btn btn-secondary btn-sm" disabled>Mark Completed</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
