@page
@model PHARMACY.Pages.Pharmacist.Notifications.IndexModel
@{
    ViewData["Title"] = "Notifications";
}

<h3 class="fw-bold mb-3">🔔 Notifications</h3>

@if (Model.Notifications.Count == 0)
{
    <p class="text-muted">No notifications yet</p>
}
else
{
    @foreach (var n in Model.Notifications)
    {
        <div class="card mb-2 @(n.Status == "Unread" ? "border-warning" : "")">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <div class="fw-semibold">@n.Message</div>
                    <small class="text-muted">@n.Date</small>
                </div>

                @if (n.Status == "Unread")
                {
                    <form method="post" asp-page-handler="Read">
                        <input type="hidden" name="id" value="@n.NotificationID" />
                        <button class="btn btn-sm btn-outline-warning">
                            Mark as read
                        </button>
                    </form>
                }
            </div>
        </div>
    }
}
