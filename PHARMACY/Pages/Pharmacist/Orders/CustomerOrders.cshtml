@page
@model PHARMACY.Pages.Pharmacist.Orders.CustomerOrdersModel

@{
    ViewData["Title"] = "Customer Orders";
}

<div class="container mt-4">
    <h2 class="mb-4">Customer Orders</h2>

    <table class="table table-striped table-bordered align-middle text-center">
        <thead class="table-dark">
            <tr>
                <th>Order #</th>
                <th>Medicine</th>
                <th>Quantity</th>
                <th>Total</th>
                <th>Status</th>
                <th>Date</th>
                <th style="width:180px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var o in Model.Orders)
            {
                <tr>
                    <td>@o.OrderID</td>
                    <td>@o.MedicineName</td>
                    <td>@o.Quantity</td>
                    <td>@o.Total.ToString("C")</td>
                    <td>
                        @if (o.Status == "Pending")
                        {
                            <span class="badge bg-warning text-dark">Pending</span>
                        }
                        else if (o.Status == "Completed")
                        {
                            <span class="badge bg-success">Completed</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Cancelled</span>
                        }
                    </td>
                    <td>@o.OrderDate.ToShortDateString()</td>
                    <td>
                        @if (o.Status == "Pending")
                        {
                            <div class="d-flex justify-content-center gap-2">
                                <form method="post" asp-page-handler="Approve">
                                    <input type="hidden" name="orderId" value="@o.OrderID" />
                                    <button class="btn btn-success btn-sm">Approve</button>
                                </form>

                                <form method="post" asp-page-handler="Cancel"
                                      onsubmit="return confirm('Reject this order?');">
                                    <input type="hidden" name="orderId" value="@o.OrderID" />
                                    <button class="btn btn-danger btn-sm">Reject</button>
                                </form>
                            </div>
                        }
                        else
                        {
                            <button class="btn btn-secondary btn-sm" disabled>No Actions</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
