@page
@model PHARMACY.Pages.Pharmacist.Orders.CreateModel
@{
    ViewData["Title"] = "Create Supplier Order";
}

<style>
    /* ===== Supplier Order Form ===== */
    .order-wrapper {
        min-height: 90vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .order-card {
        border: none;
        border-radius: 26px;
        background: linear-gradient(135deg, #ffffff, #f5f8ff);
        box-shadow: 0 18px 45px rgba(13,110,253,.18);
        animation: popUp .6s ease;
    }

    @@keyframes popUp {
        from

    {
        opacity: 0;
        transform: scale(.95) translateY(20px);
    }

    to {
        opacity: 1;
        transform: scale(1) translateY(0);
    }

    }

    .order-header {
        text-align: center;
        padding: 28px 24px 10px;
    }

    .order-icon {
        width: 90px;
        height: 90px;
        margin: auto;
        border-radius: 50%;
        background: linear-gradient(135deg, #0d6efd, #5b8cff);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 40px;
        color: #fff;
        box-shadow: 0 10px 30px rgba(13,110,253,.4);
    }

    .form-label {
        font-weight: 600;
    }

    .form-control, .form-select {
        border-radius: 14px;
        padding: 12px;
        transition: all .25s ease;
    }

        .form-control:focus, .form-select:focus {
            box-shadow: 0 0 0 .2rem rgba(13,110,253,.25);
        }

    .send-btn {
        border-radius: 16px;
        font-weight: 600;
        padding: 14px;
        transition: all .3s ease;
    }

        .send-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 14px 35px rgba(25,135,84,.4);
        }
</style>

<div class="order-wrapper">
    <div class="col-md-7 col-lg-6">

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success text-center mb-4">
                @TempData["Success"]
            </div>
        }

        <div class="card order-card">

            <!-- Header -->
            <div class="order-header">
                <div class="order-icon mb-3">📦</div>
                <h3 class="fw-bold text-primary mb-0">
                    Supplier Order
                </h3>
                <small class="text-muted">
                    Create a new order for suppliers
                </small>
            </div>

            <!-- Body -->
            <div class="card-body px-4 pb-4">

                <form method="post">

                    <div class="mb-3">
                        <label class="form-label">🏭 Supplier</label>
                        <select asp-for="SupplierID" class="form-select" required>
                            <option value="">-- Select Supplier --</option>
                            @foreach (var s in Model.Suppliers)
                            {
                                <option value="@s.UserID">@s.CompanyName</option>
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">💊 Medicine</label>
                        <select asp-for="MedicineID" class="form-select" required>
                            <option value="">-- Select Medicine --</option>
                            @foreach (var m in Model.Medicines)
                            {
                                <option value="@m.Medicine_ID">@m.Name</option>
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">📦 Quantity</label>
                        <input asp-for="Quantity"
                               type="number"
                               min="1"
                               class="form-control"
                               required />
                    </div>

                    <div class="mb-4">
                        <label class="form-label">📅 Expected Delivery Date</label>
                        <input asp-for="RequestDate"
                               type="date"
                               class="form-control"
                               required />
                    </div>

                    <button type="submit"
                            class="btn btn-success w-100 send-btn">
                        🚀 Send Order
                    </button>

                </form>

            </div>
        </div>
    </div>
</div>
