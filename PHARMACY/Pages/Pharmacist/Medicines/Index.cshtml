@page
@model PHARMACY.Pages.Pharmacist.Medicines.IndexModel

<h2 class="section-title mb-4 text-center">💊 Pharmacy Medicines</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show text-center mb-4"
         role="alert">
        @TempData["SuccessMessage"]
        <button type="button"
                class="btn-close"
                data-bs-dismiss="alert"></button>
    </div>
}


<style>



    
    .btn-search-green {
        background: linear-gradient(135deg, #198754, #20c997);
        color: white;
        border: none;
        font-weight: 600;
        border-radius: 12px;
        transition: all 0.3s ease;
    }

        .btn-search-green:hover {
            background: linear-gradient(135deg, #157347, #1aa179);
            transform: scale(1.05);
            color: white;
        }



    /* ===== Premium Table ===== */
    .premium-table {
        border-collapse: separate;
        border-spacing: 0 10px;
    }

        .premium-table thead th {
            background: #0d6efd;
            color: #fff;
            border: none;
            padding: 14px 12px;
            font-weight: 600;
        }

        .premium-table tbody tr {
            background: #fff;
            box-shadow: 0 8px 22px rgba(0,0,0,0.05);
            border-radius: 14px;
            transition: transform .2s ease, box-shadow .2s ease;
        }

            .premium-table tbody tr:hover {
                transform: translateY(-3px);
                box-shadow: 0 12px 30px rgba(0,0,0,0.12);
            }

        .premium-table td {
            border: none;
            padding: 14px 12px;
            vertical-align: middle;
        }

    /* Pills */
    .badge-pill {
        padding: 6px 12px;
        border-radius: 50px;
        font-size: 12px;
        font-weight: 600;
    }

    /* Expiry states */
    .expired {
        color: #dc3545;
        font-weight: 600;
    }

    .expiring-soon {
        color: #fd7e14;
        font-weight: 600;
    }

    .expiry-safe {
        color: #198754;
        font-weight: 600;
    }

    /* Update inputs */
    .table-update input {
        border-radius: 10px;
    }

    .table-update button {
        border-radius: 10px;
    }
</style>



<!-- 🔍 SEARCH + FILTER -->
<div class="card soft-card p-3 mb-4">

    


    <form method="post" class="row g-2 align-items-center mb-4">

    <!-- 🔍 Search input -->
    <div class="col-md-4">
        <input asp-for="SearchTerm"
               class="form-control"
               placeholder="🔍 Search medicine by name..." />
    </div>

    <!-- 📂 Category -->
    <div class="col-md-4">
        <select asp-for="SelectedCategoryId"
                class="form-select">
            <option value="">All Categories</option>
            @foreach (var c in Model.Categories)
            {
                <option value="@c.Id">@c.Name</option>
            }
        </select>
    </div>

    <!-- 🔍 SEARCH BUTTON -->
    <div class="col-md-2 d-grid">
        <button type="submit"
                asp-page-handler="Search"
                class="btn btn-search">
            🔍 Search
        </button>
    </div>

    <!-- 📂 FILTER BUTTON -->
    <div class="col-md-2 d-grid">
        <button type="submit"
                asp-page-handler="Filter"
                class="btn btn-primary">
            Apply
        </button>
    </div>

    </form>
    


    <form method="post" asp-page-handler="OutOfStock">
        <button class="btn btn-danger w-100">
            ⚠ Out Of Stock
        </button>
    </form>


</div>

<!-- ➕ ADD MEDICINE -->
<div class="card soft-card p-4 mb-4">
    <h5 class="fw-bold mb-3">➕ Add New Medicine</h5>

    <form method="post" asp-page-handler="Add">
        <div class="row g-3 align-items-end">

            <div class="col-md-3">
                <label class="form-label">Medicine Name</label>
                <input asp-for="NewMedicine.Name"
                       class="form-control"
                       required />
            </div>

            <div class="col-md-2">
                <label class="form-label">Stock</label>
                <input asp-for="NewMedicine.Stock_Quantity"
                       type="number"
                       min="1"
                       class="form-control"
                       required />
            </div>

            <div class="col-md-2">
                <label class="form-label">Price</label>
                <input asp-for="NewMedicine.Price"
                       type="number"
                       step="0.01"
                       min="0"
                       class="form-control"
                       required />
            </div>

            <div class="col-md-3">
                <label class="form-label">Expiry Date</label>
                <input asp-for="NewMedicine.Expiry_Date"
                       type="date"
                       class="form-control"
                       required />
            </div>

            <div class="col-md-2 d-grid">
                <button class="btn btn-success">
                    ➕ Add
                </button>
            </div>

        </div>
    </form>
</div>

<!-- 📦 MEDICINES TABLE -->
<div class="card soft-card p-4">
    <h5 class="fw-bold mb-3">📦 Medicines List</h5>

    <div class="table-responsive">
        <table class="table premium-table align-middle text-center mb-0">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Medicine</th>
                    <th>Stock</th>
                    <th>Price</th>
                    <th>Expiry</th>
                    <th>Update</th>
                </tr>
            </thead>

            


            <tbody>
                @foreach (var m in Model.Medicines)
                {
                    var daysLeft = (m.Expiry_Date - DateTime.Now).Days;

                    <tr>
                        <td class="text-muted">@m.Medicine_ID</td>

                        <td class="fw-semibold">@m.Name</td>

                        <!-- Stock -->
                        <td>
                            @if (m.Stock_Quantity <= 0)
                            {
                                <span class="badge bg-danger badge-pill">Out</span>
                            }
                            else if (m.Stock_Quantity < 10)
                            {
                                <span class="badge bg-warning text-dark badge-pill">
                                    Low (@m.Stock_Quantity)
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-success badge-pill">
                                    @m.Stock_Quantity
                                </span>
                            }
                        </td>

                        <!-- Price -->
                        <td>@m.Price EGP</td>

                        <!-- Expiry -->
                        <td>
                            @if (daysLeft < 0)
                            {
                                <span class="expired">❌ Expired</span>
                            }
                            else if (daysLeft <= 30)
                            {
                                <span class="expiring-soon">
                                    ⏳ @daysLeft days
                                </span>
                            }
                            else
                            {
                                <span class="expiry-safe">✔ Safe</span>
                            }
                        </td>

                        <!-- Update -->
                        <td style="min-width:260px;">
                            <form method="post"
                                  asp-page-handler="Update"
                                  class="d-flex gap-2 table-update">

                                <input type="hidden"
                                       name="UpdateMedicineId"
                                       value="@m.Medicine_ID" />

                                <input name="NewStock"
                                       type="number"
                                       class="form-control form-control-sm"
                                       placeholder="Stock" />

                                <input name="NewExpiryDate"
                                       type="date"
                                       class="form-control form-control-sm" />

                                <button class="btn btn-warning btn-sm">
                                    Update
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

