@model PHARMACY.Pages.Pharmacist.Medicines.IndexModel

<h2 class="mb-4">Manage Medicines</h2>

<!-- 🔍 Search -->
<form method="post" class="d-flex gap-2 mb-4">
    <input asp-for="SearchTerm" class="form-control" placeholder="Search medicine..." />
    <button asp-page-handler="Search" class="btn btn-primary">Search</button>
    <button asp-page-handler="OutOfStock" class="btn btn-danger">Out Of Stock</button>
    
</form>

<!-- ➕ Add Medicine -->
<form method="post" asp-page-handler="Add" class="card p-3 mb-4">
    <h5 class="mb-3">Add New Medicine</h5>

    <div class="row g-2">
        <div class="col-md-3">
            <input asp-for="NewMedicine.Name" class="form-control" placeholder="Name" required />
        </div>
        <div class="col-md-2">
            <input asp-for="NewMedicine.Stock_Quantity" type="number" class="form-control" placeholder="Stock" required />
        </div>
        <div class="col-md-2">
            <input asp-for="NewMedicine.Price" type="number" step="0.01" class="form-control" placeholder="Price" required />
        </div>
        <div class="col-md-3">
            <input asp-for="NewMedicine.Expiry_Date" type="date" class="form-control" required />
        </div>
        <div class="col-md-2">
            <button class="btn btn-success w-100">Add</button>
        </div>
    </div>
</form>

<!-- 📦 Medicines Table -->
@if (TempData["UpdateMessage"] != null)
{
    <div class="alert alert-success text-center">
        @TempData["UpdateMessage"]
    </div>
}

<table class="table table-bordered table-striped text-center align-middle">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Stock</th>
            <th>Price</th>
            <th>Expiry Date</th>
            <th>Update</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model.Medicines)
        {
            <tr>
                <td>@m.Medicine_ID</td>
                <td>@m.Name</td>
                <td>@m.Stock_Quantity</td>
                <td>@m.Price</td>
                <td>@m.Expiry_Date.ToShortDateString()</td>
                <td>
                    <form method="post" asp-page-handler="Update" class="d-flex gap-1">
                        <input type="hidden" name="UpdateMedicineId" value="@m.Medicine_ID" />

                        <input name="NewStock"
                               type="number"
                               class="form-control"
                               placeholder="New stock" />

                        <input name="NewExpiryDate"
                               type="date"
                               class="form-control" />

                        <button class="btn btn-warning btn-sm">
                            Update
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

