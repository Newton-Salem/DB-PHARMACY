@page
@model PHARMACY.Pages.Pharmacist.CustomerFeedback.IndexModel
@{
    ViewData["Title"] = "Customer Feedback";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">Customer Feedback</h2>

    @if (!Model.Feedbacks.Any())
    {
        <div class="alert alert-info text-center">
            No feedbacks have been submitted yet.
        </div>
    }
    else
    {
        <div class="row g-3">
            @foreach (var f in Model.Feedbacks)
            {
                <div class="col-md-6">
                    <div class="card shadow-sm h-100">
                        <div class="card-header bg-dark text-white d-flex justify-content-between">
                            <span>
                                <strong>Order #@f.OrderID</strong>
                            </span>
                            <span>
                                @* لو حابب بعدين تضيف تاريخ *@
                                <i class="bi bi-chat-left-text"></i> Feedback
                            </span>
                        </div>

                        <div class="card-body">
                            <p class="fw-bold mb-1">Customer: @f.CustomerName</p>

                            <small class="text-muted d-block mb-2">
                                @f.Date.ToString("dd MMM yyyy - hh:mm tt")
                            </small>

                            <p class="mb-0">@f.FeedbackText</p>
                        </div>

                    </div>
                </div>
            }
        </div>
    }
</div>
