@page
@model PHARMACY.Pages.Customer.IndexModel
@{
    ViewData["Title"] = "Customer Dashboard";
}

<div class="container mt-4">
    <h1 class="mb-4 text-center">Welcome, @Model.CustomerName!</h1>

    <div class="row g-4">
        <!-- Total Orders Card -->
        <div class="col-md-4">
            <div class="card text-white bg-primary h-100">
                <div class="card-body">
                    <h5 class="card-title">Total Orders</h5>
                    <p class="card-text display-6">@Model.OrdersCount</p>
                    <a href="/Customer/Orders/Index" class="btn btn-light">View Orders</a>
                </div>
            </div>
        </div>

        <!-- Total Spent Card -->
        <div class="col-md-4">
            <div class="card text-white bg-success h-100">
                <div class="card-body">
                    <h5 class="card-title">Total Spent</h5>
                    <p class="card-text display-6">@Model.TotalSpent.ToString("C")</p>
                    <a href="/Customer/Orders/Index" class="btn btn-light">View Orders</a>
                </div>
            </div>
        </div>

        <!-- Actions Card -->
        <div class="col-md-4">
            <div class="card bg-light h-100">
                <div class="card-body d-flex flex-column justify-content-between">
                    <h5 class="card-title">Quick Actions</h5>
                    <div class="d-grid gap-2 mt-3">
                        <a href="/Customer/Medicines/Index" class="btn btn-primary">Browse Medicines</a>
                        <a href="/Account/Profile" class="btn btn-secondary">Edit Profile</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
