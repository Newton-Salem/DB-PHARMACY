@page
@model PHARMACY.Pages.Customer.IndexModel
@{
    ViewData["Title"] = "Customer Dashboard";
}

<style>
    .dash-card {
        border-radius: 20px;
        border: none;
        transition: all 0.3s ease;
        animation: fadeUp 0.6s ease;
    }

        .dash-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 14px 35px rgba(0,0,0,0.15);
        }

    @@keyframes fadeUp {
        from

    {
        opacity: 0;
        transform: translateY(25px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .icon-circle {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 26px;
        color: white;
        margin-bottom: 10px;
    }

    .action-btn {
        border-radius: 14px;
        transition: all 0.25s ease;
    }

        .action-btn:hover {
            transform: scale(1.05);
        }
</style>

<div class="container mt-4">

    <!-- Welcome -->
    <div class="text-center mb-5">
        <h2 class="fw-bold text-primary">
            👋 Welcome, @Model.CustomerName
        </h2>
        <p class="text-muted">
            Manage your orders and profile easily
        </p>
    </div>

    <div class="row g-4">

        <!-- Total Orders -->
        <div class="col-md-4">
            <div class="card dash-card p-4 h-100 text-center">
                <div class="icon-circle bg-primary mx-auto">
                    📦
                </div>
                <h5 class="fw-bold">Total Orders</h5>
                <p class="display-6 text-primary fw-bold">
                    @Model.OrdersCount
                </p>
                <a href="/Customer/Orders/Index"
                   class="btn btn-outline-primary action-btn mt-2">
                    View Orders
                </a>
            </div>
        </div>

        <!-- Total Spent -->
        <div class="col-md-4">
            <div class="card dash-card p-4 h-100 text-center">
                <div class="icon-circle bg-success mx-auto">
                    💰
                </div>
                <h5 class="fw-bold">Total Spent</h5>
                <p class="display-6 text-success fw-bold">
                    @Model.TotalSpent.ToString("C")
                </p>
                <a href="/Customer/Orders/Index"
                   class="btn btn-outline-success action-btn mt-2">
                    Order History
                </a>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="col-md-4">
            <div class="card dash-card p-4 h-100 text-center">
                <div class="icon-circle bg-secondary mx-auto">
                    ⚡
                </div>

                <h5 class="fw-bold">Quick Actions</h5>

                <div class="d-grid gap-2 mt-3">
                    <a href="/Customer/Medicines/Index"
                       class="btn btn-primary action-btn">
                        💊 Browse Medicines
                    </a>

                    <a href="/Account/Profile"
                       class="btn btn-outline-secondary action-btn">
                        👤 Edit Profile
                    </a>
                </div>
            </div>
        </div>

    </div>
</div>
