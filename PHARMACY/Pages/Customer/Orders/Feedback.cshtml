@page
@model PHARMACY.Pages.Customer.Orders.FeedbackModel

@{
    ViewData["Title"] = "Give Feedback";
}

<div class="container mt-5" style="max-width:600px;">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white text-center">
            <h4>Feedback for Order #@Model.OrderId</h4>
        </div>

        <div class="card-body">

            @if (!Model.AlreadySubmitted)
            {
                <form method="post">
                    <input type="hidden" asp-for="OrderId" />

                    <div class="mb-3">
                        <label class="form-label">Your Feedback</label>
                        <textarea asp-for="FeedbackText"
                                  class="form-control"
                                  rows="4"
                                  required></textarea>
                    </div>

                    <button type="submit" class="btn btn-success">Submit</button>
                    <a asp-page="/Customer/Orders/Index" class="btn btn-secondary ms-2">
                        Cancel
                    </a>
                </form>
            }
            else
            {
                <div class="alert alert-info text-center">
                    You already submitted feedback for this order.
                </div>
            }

        </div>
    </div>
</div>
