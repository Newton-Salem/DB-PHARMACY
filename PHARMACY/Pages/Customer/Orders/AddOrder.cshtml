@page
@model PHARMACY.Pages.Customer.Orders.AddOrderModel
@{
    ViewData["Title"] = "Place Order";
}

<style>
    /* ===== Add Order UI ===== */

    .order-card {
        border-radius: 20px;
        border: none;
        animation: fadeSlide 0.6s ease;
    }

    @@keyframes fadeSlide {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .medicine-icon {
        width: 70px;
        height: 70px;
        border-radius: 50%;
        background: linear-gradient(135deg, #4facfe, #00f2fe);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 32px;
        color: white;
        margin: auto;
    }

    .price-box {
        background: #f1f7ff;
        border-radius: 14px;
        padding: 12px;
        text-align: center;
        font-weight: 600;
        color: #0d6efd;
    }

    .order-btn {
        border-radius: 14px;
        transition: all 0.3s ease;
    }

        .order-btn:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 20px rgba(13,110,253,0.3);
        }

    .cancel-btn {
        border-radius: 14px;
    }
</style>

<div class="container d-flex justify-content-center align-items-center mt-5">

    <div class="col-md-6 col-lg-5">

        <div class="card shadow order-card">

            <!-- Header -->
            <div class="card-header bg-white text-center border-0 pt-4">
                <div class="medicine-icon mb-2">💊</div>
                <h4 class="fw-bold text-primary mb-0">Place Your Order</h4>
                <small class="text-muted">Review details before confirming</small>
            </div>

            <!-- Body -->
            <div class="card-body px-4 pb-4">

                <form method="post">

                    <!-- Hidden values -->
                    <input type="hidden" asp-for="MedicineID" />
                    <input type="hidden" asp-for="UnitPrice" />

                    <!-- Medicine Name -->
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Medicine</label>
                        <input asp-for="MedicineName"
                               class="form-control"
                               readonly
                               style="border-radius:12px;" />
                    </div>

                    <!-- Quantity -->
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Quantity</label>
                        <input asp-for="Quantity"
                               type="number"
                               min="1"
                               class="form-control text-center"
                               style="border-radius:12px;"
                               required />
                    </div>

                    <!-- Price -->
                    <div class="mb-4">
                        <label class="form-label fw-semibold">Price per unit</label>
                        <div class="price-box">
                            @Model.UnitPrice EGP
                        </div>
                    </div>

                    <!-- Actions -->
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary order-btn py-2">
                            🛒 Confirm Order
                        </button>

                        <a asp-page="/Customer/Orders/Index"
                           class="btn btn-outline-secondary cancel-btn py-2">
                            Cancel
                        </a>
                    </div>

                </form>

            </div>
        </div>

    </div>
</div>
