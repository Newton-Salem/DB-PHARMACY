@page
@model PHARMACY.Pages.Customer.Medicines.IndexModel
@{
    ViewData["Title"] = "Medicines Catalog";
}

<style>
    /* ===== Customer Medicines Style ===== */

    .medicine-card {
        border: none;
        border-radius: 18px;
        transition: all 0.3s ease;
        background: #ffffff;
    }

        .medicine-card:hover {
            transform: translateY(-6px) scale(1.01);
            box-shadow: 0 15px 35px rgba(0,0,0,0.12);
        }

    .medicine-icon {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background: linear-gradient(135deg, #4facfe, #00f2fe);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 28px;
        margin-bottom: 10px;
    }

    .price-badge {
        background: #e8f4ff;
        color: #0d6efd;
        font-weight: 600;
        border-radius: 12px;
        padding: 6px 14px;
        font-size: 14px;
    }

    .order-btn {
        border-radius: 12px;
        transition: all 0.3s ease;
    }

        .order-btn:hover {
            transform: scale(1.05);
        }
</style>

<div class="container mt-4">

    <!-- Page Title -->
    <div class="text-center mb-4">
        <h2 class="fw-bold text-primary">💊 Medicines Catalog</h2>
        <p class="text-muted">Choose your medicine and order easily</p>
    </div>

    <!-- Search -->
    <form method="get" class="d-flex justify-content-center mb-4">
        <input type="text"
               name="SearchTerm"
               value="@Model.SearchTerm"
               class="form-control me-2"
               style="max-width:320px; border-radius:12px;"
               placeholder="Search medicine..." />
        <button type="submit" class="btn btn-primary px-4" style="border-radius:12px;">
            🔍 Search
        </button>
    </form>

    <!-- Medicines Cards -->
    <div class="row g-4">
        @foreach (var m in Model.Medicines)
        {
            <div class="col-md-4 col-lg-3">
                <div class="card medicine-card p-3 text-center h-100">

                    <div class="medicine-icon mx-auto">
                        💊
                    </div>

                    <h5 class="fw-bold mb-1">@m.Name</h5>

                    <span class="price-badge mb-3 d-inline-block">
                        @m.Price EGP
                    </span>

                    <form method="post" asp-page="/Customer/Orders/AddOrder" class="mt-auto">
                        <input type="hidden" name="MedicineID" value="@m.Medicine_ID" />
                        <input type="hidden" name="MedicineName" value="@m.Name" />
                        <input type="hidden" name="UnitPrice" value="@m.Price" />

                        <div class="d-flex justify-content-center align-items-center mb-2">
                            <input type="number"
                                   name="Quantity"
                                   value="1"
                                   min="1"
                                   class="form-control text-center"
                                   style="width:70px; border-radius:10px;" />
                        </div>

                        <button type="submit" class="btn btn-success order-btn w-100">
                            🛒 Order Now
                        </button>
                    </form>

                </div>
            </div>
        }
    </div>

</div>
