@page
@model PHARMACY.Pages.Account.EditProfileModel
@{
    ViewData["Title"] = "Edit Profile";
}

<div class="container mt-5" style="max-width: 550px;">
    <div class="card shadow border-0">
        <div class="card-header bg-dark text-white text-center">
            <h4 class="mb-0">Edit Profile</h4>
        </div>

        <div class="card-body p-4">
            <form method="post">

                <div class="mb-3">
                    <label class="form-label fw-bold">Full Name</label>
                    <input asp-for="Input.Name" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Email</label>
                    <input asp-for="Input.Email" class="form-control" type="email" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Phone</label>
                    <input asp-for="Input.Phone" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Address</label>
                    <textarea asp-for="Input.Address"
                              class="form-control"
                              rows="3"></textarea>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">
                        Save Changes
                    </button>
                    <a href="/Account/Profile" class="btn btn-outline-secondary">
                        Cancel
                    </a>
                </div>
            </form>

            @if (!string.IsNullOrEmpty(Model.Message))
            {
                <div class="alert @(Model.IsSuccess ? "alert-success" : "alert-danger") mt-3 text-center">
                    @Model.Message
                </div>
            }
        </div>
    </div>
</div>
