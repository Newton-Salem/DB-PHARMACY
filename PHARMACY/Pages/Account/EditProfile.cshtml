@page
@model PHARMACY.Pages.Account.EditProfileModel
@{
    ViewData["Title"] = "Edit Profile";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Edit Profile | PHARMACY</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <style>
        .fade-slide {
            animation: fadeSlide 0.9s ease;
        }

        @@keyframes fadeSlide {
            from {
                opacity: 0;
                transform: translateY(25px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .form-control:focus {
            box-shadow: 0 0 0 0.15rem rgba(13,110,253,.25);
        }
    </style>
</head>

<body style="background: linear-gradient(135deg,#e8f1ff,#f5f9ff);">

    <div class="container d-flex justify-content-center align-items-center fade-slide"
         style="min-height:100vh;">

        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-0 rounded-4">

                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h4 class="mb-0">
                        <i class="bi bi-pencil-square me-1"></i>
                        Edit Profile
                    </h4>
                </div>

                <div class="card-body p-4">
                    <form method="post">

                        <div class="mb-3">
                            <label class="form-label fw-semibold">
                                <i class="bi bi-person"></i> Full Name
                            </label>
                            <input asp-for="Input.Name" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">
                                <i class="bi bi-envelope"></i> Email
                            </label>
                            <input asp-for="Input.Email" class="form-control" type="email" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">
                                <i class="bi bi-telephone"></i> Phone
                            </label>
                            <input asp-for="Input.Phone" class="form-control" />
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-semibold">
                                <i class="bi bi-geo-alt"></i> Address
                            </label>
                            <textarea asp-for="Input.Address"
                                      class="form-control"
                                      rows="3"></textarea>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary py-2">
                                <i class="bi bi-save me-1"></i> Save Changes
                            </button>
                            <a href="/Account/Profile" class="btn btn-outline-secondary">
                                Cancel
                            </a>
                        </div>
                    </form>

                    @if (!string.IsNullOrEmpty(Model.Message))
                    {
                        <div class="alert alert-info mt-3 text-center">
                            @Model.Message
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
