@page
@model PHARMACY.Pages.Account.ProfileModel
@{
    ViewData["Title"] = "Profile";
}

<div class="container mt-5" style="max-width: 600px;">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white text-center">
            <h3>User Profile</h3>
        </div>

        <div class="card-body">
            <table class="table table-borderless mb-0">
                <tr>
                    <th class="text-start" style="width: 40%;">Username</th>
                    <td class="text-start">@Model.Username</td>
                </tr>
                <tr>
                    <th class="text-start">Role</th>
                    <td class="text-start">@Model.Role</td>
                </tr>
            </table>
        </div>

        <div class="card-footer text-center">
            <a href="/Account/EditProfile" class="btn btn-outline-primary">Edit Profile</a>
            <a href="/Account/ChangePassword" class="btn btn-outline-secondary ms-2">Change Password</a>
        </div>
    </div>
</div>
