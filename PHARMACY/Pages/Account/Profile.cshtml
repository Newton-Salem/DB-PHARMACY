@page
@model PHARMACY.Pages.Account.ProfileModel
@{
    ViewData["Title"] = "Profile";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Profile | PHARMACY</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <style>
        .fade-slide {
            animation-name: fadeSlide;
            animation-duration: 0.9s;
            animation-timing-function: ease;
        }

        @@keyframes fadeSlide {
            0% {
                opacity: 0;
                transform: translateY(25px);
            }

            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>

<body style="background: linear-gradient(135deg, #e8f1ff, #f5f9ff);">

    <div class="container d-flex justify-content-center align-items-center fade-slide"
         style="min-height:100vh;">

        <div class="col-md-6 col-lg-5">

            <div class="card shadow-sm border-0 rounded-4">

                <!-- Header -->
                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h4 class="mb-0">
                        <i class="bi bi-person-circle me-1"></i>
                        User Profile
                    </h4>
                </div>

                <!-- Body -->
                <div class="card-body p-4">

                    <!-- Avatar -->
                    <div class="text-center mb-4">
                        <div class="rounded-circle bg-primary text-white d-inline-flex
                                    align-items-center justify-content-center shadow"
                             style="width:90px;height:90px;font-size:36px;">
                            @Model.Username.FirstOrDefault()
                        </div>

                        <h5 class="mt-3 mb-0 fw-bold text-primary">
                            @Model.Username
                        </h5>
                        <small class="text-muted">
                            <i class="bi bi-shield-lock"></i> @Model.Role
                        </small>
                    </div>

                    <hr />

                    <!-- Info -->
                    <div class="px-2">
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">
                                <i class="bi bi-person"></i> Username
                            </span>
                            <span class="fw-semibold">@Model.Username</span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <span class="text-muted">
                                <i class="bi bi-person-badge"></i> Role
                            </span>
                            <span class="fw-semibold">@Model.Role</span>
                        </div>
                    </div>

                    <hr class="my-4" />

                    <!-- Actions -->
                    <div class="d-flex justify-content-center gap-3">
                        <a href="/Account/EditProfile"
                           class="btn btn-primary px-4">
                            <i class="bi bi-pencil-square me-1"></i>
                            Edit Profile
                        </a>

                        <a href="/Account/ChangePassword"
                           class="btn btn-outline-secondary px-4">
                            <i class="bi bi-key me-1"></i>
                            Change Password
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
