@page
@model PHARMACY.Pages.Account.ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Change Password | PHARMACY</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <style>
        .fade-slide {
            animation: fadeSlide 0.9s ease;
        }

        @@keyframes fadeSlide {
            from {
                opacity: 0;
                transform: translateY(25px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* 🔥 Button Hover Animation */
        .btn-primary {
            transition: all 0.25s ease;
        }

            .btn-primary:hover {
                background: linear-gradient(135deg, #0b5ed7, #084298);
            }
        /* أزرق أغمق */
                transform: translateY(-2px); /* يطلع لفوق سنة */
                box-shadow: 0 6px 15px rgba(13,110,253,0.35);
            }

            .btn-primary:active {
                transform: scale(0.97); /* إحساس click */
            }
    </style>

</head>

<body style="background: linear-gradient(135deg,#e8f1ff,#f5f9ff);">

    <div class="container d-flex justify-content-center align-items-center fade-slide"
         style="min-height:100vh;">

        <div class="col-md-5 col-lg-4">
            <div class="card shadow-sm border-0 rounded-4">

                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h4 class="mb-0">
                        <i class="bi bi-key me-1"></i>
                        Change Password
                    </h4>
                </div>

                <div class="card-body p-4">
                    <form method="post">

                        <div class="mb-3">
                            <label class="form-label fw-semibold">
                                <i class="bi bi-lock"></i> Current Password
                            </label>
                            <input asp-for="Input.CurrentPassword"
                                   class="form-control"
                                   type="password"
                                   required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">
                                <i class="bi bi-shield-lock"></i> New Password
                            </label>
                            <input asp-for="Input.NewPassword"
                                   class="form-control"
                                   type="password"
                                   required />
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-semibold">
                                <i class="bi bi-shield-check"></i> Confirm Password
                            </label>
                            <input asp-for="Input.ConfirmPassword"
                                   class="form-control"
                                   type="password"
                                   required />
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary py-2">
                                <i class="bi bi-arrow-repeat me-1"></i>
                                Change Password
                            </button>
                            <a href="/Account/Profile" class="btn btn-outline-secondary">
                                Cancel
                            </a>
                        </div>
                    </form>

                    @if (!string.IsNullOrEmpty(Model.Message))
                    {
                        <div class="alert alert-info mt-3 text-center">
                            @Model.Message
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
