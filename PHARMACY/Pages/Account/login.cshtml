@page
@model PHARMACY.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Login | PHARMACY</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <style>
        /* Card entrance animation */
        .login-card {
            animation: fadeSlide 0.9s ease;
        }

        @@keyframes fadeSlide {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Button hover animation */
        .btn-primary {
            transition: all 0.25s ease;
        }

            .btn-primary:hover {
                background-color: #0b5ed7;
                transform: translateY(-2px);
                box-shadow: 0 6px 16px rgba(13,110,253,0.35);
            }

            .btn-primary:active {
                transform: scale(0.97);
            }

        /*  Input focus effect */
        .form-control:focus {
            box-shadow: 0 0 0 0.15rem rgba(13,110,253,.25);
            border-color: #86b7fe;
        }
    </style>
</head>

<body style="background: linear-gradient(135deg, #e8f1ff, #f5f9ff);">

    <div class="container d-flex justify-content-center align-items-center" style="min-height:100vh;">
        <div class="col-md-5 col-lg-4">

            <div class="bg-white rounded-4 shadow-sm p-4 login-card">

                <!-- Header -->
                <div class="text-center mb-4">
                    <div class="mb-2">
                        <i class="bi bi-capsule-pill fs-1 text-primary"></i>
                    </div>
                    <h3 class="fw-bold text-primary mb-0">PHARMACY</h3>
                    <small class="text-muted">Sign in to continue</small>
                </div>

                <!-- Form -->
                <form method="post">

                    <div class="input-group mb-3">
                        <span class="input-group-text bg-light">
                            <i class="bi bi-person text-primary"></i>
                        </span>
                        <input asp-for="Input.Username"
                               class="form-control"
                               placeholder="Username"
                               required />
                    </div>

                    <div class="input-group mb-3">
                        <span class="input-group-text bg-light">
                            <i class="bi bi-lock text-primary"></i>
                        </span>
                        <input asp-for="Input.Password"
                               type="password"
                               class="form-control"
                               placeholder="Password"
                               required />
                    </div>

                    <button type="submit" class="btn btn-primary w-100 py-2">
                        <i class="bi bi-box-arrow-in-right me-1"></i>
                        Login
                    </button>
                </form>

                @if (!string.IsNullOrEmpty(Model.Message))
                {
                    <div class="alert alert-danger text-center mt-3 mb-0">
                        @Model.Message
                    </div>
                }

                <hr class="my-4" />

                <!-- Footer -->
                <div class="text-center">
                    <span class="text-muted">New here?</span>
                    <a asp-page="/Account/Register"
                       class="fw-semibold text-primary text-decoration-none">
                        Create account
                    </a>
                </div>

            </div>

        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
