@page
@model PHARMACY.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-5">

        @* ✅ Success Message + Auto Redirect *@
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
                <strong>Success!</strong> @TempData["SuccessMessage"]
                <br />
                <small>You will be redirected to login page shortly...</small>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>

            <script>
                setTimeout(function () {
                    window.location.href = '/Account/Login';
                }, 6000); // ⏱️ 2 seconds
            </script>
        }

        <div class="card shadow">
            <div class="card-header text-center">
                <h3>Create Account</h3>
            </div>

            <div class="card-body">
                <form method="post">

                    <div class="mb-3">
                        <label class="form-label">Full Name</label>
                        <input asp-for="Input.Name" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Username</label>
                        <input asp-for="Input.Username" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input asp-for="Input.Email" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Phone</label>
                        <input asp-for="Input.Phone" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Address</label>
                        <input asp-for="Input.Address" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Password</label>
                        <input asp-for="Input.Password"
                               type="password"
                               class="form-control"
                               required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Confirm Password</label>
                        <input asp-for="Input.ConfirmPassword"
                               type="password"
                               class="form-control"
                               required />
                    </div>

                    <button type="submit" class="btn btn-success w-100">
                        Register
                    </button>
                </form>

                @* ❌ Error Message *@
                @if (!string.IsNullOrEmpty(Model.Message))
                {
                    <div class="alert alert-danger mt-3 text-center">
                        @Model.Message
                    </div>
                }
            </div>

            <div class="card-footer text-center">
                <a asp-page="/Account/Login">
                    Already have an account? Login
                </a>
            </div>
        </div>
    </div>
</div>
