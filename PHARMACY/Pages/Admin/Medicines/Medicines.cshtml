@page
@model PHARMACY.Pages.Admin.MedicinesModel
@{
    ViewData["Title"] = "Medicines Overview";
}

<div class="container mt-4">

    <h2 class="mb-4 text-center">Medicines Overview</h2>

    <!-- Search Form -->
    <form method="get" class="mb-3 d-flex">
        <input type="text" name="SearchName" value="@Model.SearchName" class="form-control me-2" placeholder="Search by name" />
        <button type="submit" class="btn btn-secondary">Search</button>
    </form>

    <!-- Medicines Table -->
    <table class="table table-bordered table-striped text-center">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Stock</th>
                <th>Price</th>
                <th>Expiry Date</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var m in Model.Medicines)
            {
                <tr>
                    <td>@m.Id</td>
                    <td>@m.Name</td>
                    <td>@m.Stock</td>
                    <td>@m.Price</td>
                    <td>@m.Expiry.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>

</div>
