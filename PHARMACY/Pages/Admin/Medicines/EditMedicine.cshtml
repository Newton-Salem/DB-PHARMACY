@page
@model PHARMACY.Pages.Admin.Medicines.EditMedicineModel
@{
    ViewData["Title"] = "Edit Medicine";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">Edit Medicine</h2>

    <form method="post">
        <input type="hidden" asp-for="Medicine.Id" />

        <div class="mb-3">
            <label asp-for="Medicine.Name" class="form-label"></label>
            <input asp-for="Medicine.Name" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Medicine.Stock" class="form-label"></label>
            <input asp-for="Medicine.Stock" class="form-control" type="number" />
        </div>

        <div class="mb-3">
            <label asp-for="Medicine.Price" class="form-label"></label>
            <input asp-for="Medicine.Price" class="form-control" type="number" step="0.01" />
        </div>

        <div class="mb-3">
            <label asp-for="Medicine.Expiry" class="form-label"></label>
            <input asp-for="Medicine.Expiry" class="form-control" type="date" />
        </div>

        <button type="submit" class="btn btn-success">Save Changes</button>
        <a class="btn btn-secondary" asp-page="/Admin/Medicines/Medicines">Cancel</a>
    </form>
</div>
