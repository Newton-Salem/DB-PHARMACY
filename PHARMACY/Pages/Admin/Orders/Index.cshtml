@page
@model PHARMACY.Pages.Admin.Orders.IndexModel
@{
    ViewData["Title"] = "Orders Management";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">Orders Management</h2>

    <form method="get" class="mb-3">
        <div class="input-group">
            <input type="number" name="SearchID" value="@Model.SearchID" class="form-control" placeholder="Search by Order ID" />
            <button class="btn btn-primary" type="submit">Search</button>
        </div>
    </form>

    <table class="table table-bordered text-center">
        <thead class="table-dark">
            <tr>
                <th>Order ID</th>
                <th>Customer Name</th>
                <th>Total Amount</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model.Orders)
            {
                <tr>
                    <td>@order.OrderID</td>
                    <td>@order.CustomerName</td>
                    <td>@order.TotalAmount</td>
                    <td>@order.Status</td>
                    <td>
                        <form method="post" asp-page-handler="Delete" onsubmit="return confirm('Are you sure you want to delete this order?');">
                            <input type="hidden" name="orderId" value="@order.OrderID" />
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
