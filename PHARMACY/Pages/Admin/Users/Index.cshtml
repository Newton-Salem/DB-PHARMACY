@page
@model PHARMACY.Pages.Admin.Users.IndexModel
@{
    ViewData["Title"] = "Users Management";
}

<!-- ===================== Styles ===================== -->
<style>
    body {
        background: linear-gradient(135deg, #f4f8ff, #eef3fb);
    }

    .page-title {
        font-weight: 700;
        color: #1e40af;
        margin-bottom: 30px;
    }

    .stat-card {
        background: #ffffff;
        border-radius: 18px;
        padding: 22px;
        box-shadow: 0 10px 25px rgba(0,0,0,.08);
        transition: .35s;
    }

        .stat-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 18px 40px rgba(0,0,0,.15);
        }

    .stat-icon {
        width: 55px;
        height: 55px;
        border-radius: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 26px;
        color: #fff;
    }

    .bg-blue {
        background: linear-gradient(135deg,#4f8cff,#7fb3ff);
    }

    .bg-green {
        background: linear-gradient(135deg,#22c55e,#86efac);
    }

    .bg-purple {
        background: linear-gradient(135deg,#8b5cf6,#c4b5fd);
    }

    .soft-card {
        background: #ffffff;
        border-radius: 18px;
        padding: 20px;
        box-shadow: 0 10px 25px rgba(0,0,0,.08);
        margin-bottom: 25px;
    }

    .search-box {
        border-radius: 14px;
        padding: 12px;
    }

    .users-table thead {
        background: linear-gradient(135deg, #2563eb, #3b82f6);
        color: white;
    }

    .users-table tbody tr {
        transition: .25s;
    }

        .users-table tbody tr:hover {
            background: #f3f7ff;
            transform: scale(1.01);
        }

    .role-badge {
        padding: 6px 14px;
        border-radius: 20px;
        font-size: 13px;
        font-weight: 600;
        color: white;
    }

    .role-admin {
        background: #ef4444;
    }

    .role-customer {
        background: #3b82f6;
    }

    .role-pharmacist {
        background: #22c55e;
    }

    .role-supplier {
        background: #f59e0b;
    }

    .btn-soft {
        border-radius: 12px;
        transition: .25s;
    }

        .btn-soft:hover {
            transform: scale(1.08);
        }
</style>

<!-- ===================== Content ===================== -->
<div class="container mt-4">

    <h2 class="text-center page-title">👥 Users Management</h2>

    <!-- ===== Stats Cards ===== -->
    <div class="row g-4 mb-4">

        <div class="col-md-4">
            <div class="stat-card d-flex align-items-center gap-3">
                <div class="stat-icon bg-blue">👥</div>
                <div>
                    <h6 class="mb-0 text-muted">Total Users</h6>
                    <h4 class="fw-bold">@Model.UsersList.Count</h4>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="stat-card d-flex align-items-center gap-3">
                <div class="stat-icon bg-green">🧑‍💼</div>
                <div>
                    <h6 class="mb-0 text-muted">Customers</h6>
                    <h4 class="fw-bold">
                        @Model.UsersList.Count(u => u.Role == "Customer")
                    </h4>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="stat-card d-flex align-items-center gap-3">
                <div class="stat-icon bg-purple">🏥</div>
                <div>
                    <h6 class="mb-0 text-muted">Staff & Suppliers</h6>
                    <h4 class="fw-bold">
                        @Model.UsersList.Count(u => u.Role != "Customer")
                    </h4>
                </div>
            </div>
        </div>

    </div>

    <!-- ===== Search ===== -->
    <div class="soft-card">
        <form method="get" class="d-flex gap-2 align-items-center">
            <input type="text"
                   name="SearchTerm"
                   value="@Model.SearchTerm"
                   class="form-control search-box"
                   placeholder="🔍 Search by username..." />

            <button class="btn btn-primary px-4">
                Search
            </button>

            <!-- ✅ Add Admin Button -->
            <a asp-page="AddAdmin"
               class="btn btn-success px-4 btn-soft">
                ➕ Add Admin
            </a>
        </form>
    </div>

    <!-- ===== Users Table ===== -->
    <div class="soft-card">
        <table class="table users-table text-center align-middle mb-0">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Name</th>
                    <th>Role</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.UsersList)
                {
                    <tr>
                        <td class="fw-semibold">@user.Username</td>
                        <td>@user.Name</td>
                        <td>
                            <span class="role-badge
                                    @(user.Role == "Admin" ? "role-admin" :
                                                                    user.Role == "Customer" ? "role-customer" :
                                                                    user.Role == "Pharmacist" ? "role-pharmacist" :
                                                                    "role-supplier")">
                            @user.Role
                        </span>
                    </td>
                    <td>
                        <form method="post"
                              asp-page-handler="Delete"
                              onsubmit="return confirm('Are you sure you want to delete this user?');">
                            <input type="hidden" name="username" value="@user.Username" />
                            <button class="btn btn-danger btn-sm btn-soft">
                                🗑 Delete
                            </button>
                        </form>
                    </td>
                </tr>
                                }
            </tbody>
        </table>
    </div>

</div>
